<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gmy.ttiannote"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/main_theme" 
        android:name="com.gmy.ttiannote.application.NoteApplication"
        >
        <activity 
            android:name="com.gmy.ttiannote.activity.WelcomeActivity"
            android:label="@string/app_name" 
            android:launchMode="singleTask"
            >
             <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity"
            	  android:launchMode="singleTask"></activity>
        <activity android:name="com.gmy.ttiannote.activity.ImageShowActivity"
            	  android:launchMode="singleTask"></activity>
        <activity android:name="com.gmy.ttiannote.activity.NoteActivty"
            	  android:launchMode="singleTask"></activity>
    </application>

</manifest>
