<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    >
   <com.gmy.ttiannote.widget.CloudImageView 
       android:id="@+id/cloud_one_iv"
       android:layout_width="100dp"
       android:layout_height="90dp"
       android:layout_centerHorizontal="true"
       />

	<com.gmy.ttiannote.widget.CloudImageView
	    android:layout_below="@id/cloud_one_iv"
	    android:layout_marginTop="15dp"
	    android:id="@+id/cloud_two_iv"
	    android:layout_width="100dp"
	    android:layout_height="90dp" 
	    android:layout_marginLeft="200dp"/>
	
	<com.gmy.ttiannote.widget.CloudImageView
	    android:layout_below="@id/cloud_two_iv"
	    android:layout_marginTop="15dp"
	    android:id="@+id/cloud_three_iv"
	    android:layout_width="100dp"
	    android:layout_height="90dp" />
	
	<com.gmy.ttiannote.widget.CloudImageView
	    android:layout_below="@id/cloud_three_iv"
	    android:layout_marginTop="15dp"
	    android:id="@+id/cloud_four_iv"
	    android:layout_width="100dp"
	    android:layout_height="90dp"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="25dp"
	    />

</RelativeLayout>
