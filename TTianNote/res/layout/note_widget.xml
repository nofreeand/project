<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/note_frame"
    >

    <LinearLayout
        android:id="@+id/add_image_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/add_image_ll_layout_height"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:gravity="center_vertical"
         >
        <ImageView 
            android:id="@+id/image_one"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher"
            android:visibility="gone"
            />
        <ImageView 
            android:id="@+id/image_two"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher"
            android:visibility="gone"
            />
        <ImageView 
            android:id="@+id/image_three"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher"
            android:visibility="gone"
            />
        <ImageView 
            android:id="@+id/image_four"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/add_image_bt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center"
            android:text="添加" />
    </LinearLayout>

    <com.gmy.ttiannote.widget.NoteBookText
        android:id="@+id/note_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_image_ll"
        android:background="@null"
        android:hint="@string/note_hint"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" />
    <include 
        layout="@layout/bottom_doc_funclayout"
        android:id="@+id/bottom_doc_func"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>